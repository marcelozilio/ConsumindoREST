<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".telas.TelaBusca">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvProdutos"
        android:layout_alignParentTop="true"
        android:choiceMode="singleChoice"
        android:visibility="visible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgViewWarning"
        android:src="@drawable/war"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="108dp"
        android:visibility="gone"
        android:tint="@color/abc_btn_colored_borderless_text_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tentar"
        android:id="@+id/btnTentar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:visibility="gone"
        android:textColor="@color/abc_btn_colored_borderless_text_material" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sem ConexÃ£o"
        android:id="@+id/tvConexao"
        android:layout_alignBottom="@+id/imgViewWarning"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:textColor="@color/abc_btn_colored_borderless_text_material" />

</RelativeLayout>
